{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": [
            "dom",
            "es2016"
        ]
    },
    "exclude": [
        "node_modules/*",
        "aot/",
        "src/main.aot.ts",
        "src/**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot/",
        "skipMetadataEmit": true
    }
}
